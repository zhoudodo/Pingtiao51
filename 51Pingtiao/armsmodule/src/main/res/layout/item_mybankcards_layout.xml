<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#4C4C51">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:background="@drawable/bg_card_num1">
        <ImageView
            android:id="@+id/icon_bank"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="19dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_audio"/>
        <TextView
            android:id="@+id/card_name"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国建设银行"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/card_type"
            android:layout_below="@id/card_name"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/card_nums"
            android:layout_below="@id/card_type"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** 2461"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/click_card_more"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="···"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
    </RelativeLayout>
</LinearLayout>