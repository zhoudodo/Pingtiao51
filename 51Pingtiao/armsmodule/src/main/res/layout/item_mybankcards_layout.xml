<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#4C4C51">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:background="@drawable/bg_card_num1">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="19dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_audio"/>
        <TextView
            android:id="@+id/card_name"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国建设银行"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/card_type"
            android:layout_below="@id/card_name"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/card_nums"
            android:layout_below="@id/card_type"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** 2461"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/click_card_more"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="···"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/card_popu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_width="91dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="11dp">
            <TextView
                android:id="@+id/card_cancel_relative"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="解除绑定"
                android:textColor="#ff2c2c2c"
                android:textSize="13sp"
                />
            <include
                layout="@layout/include_divider_line"></include>
            <TextView
                android:id="@+id/card_cancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ff2c2c2c"
                android:textSize="13sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>