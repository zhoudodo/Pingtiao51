<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_bottom_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_FAFAFA"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_main_page1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/act_main_iv_page1"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/act_main_tv_page1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_page1"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_main_page2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/act_main_iv_page2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/act_main_tv_page2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_page2"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_page4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/act_main_iv_page4"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/act_main_tv_page4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_page4"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_page3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/act_main_iv_page3"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/act_main_tv_page3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_page3"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>