<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="355dp"
    android:layout_height="137dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dianzipingtiao_item_bg2"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/main_rl_layout"
    >
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/anli_icon2"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:src="@drawable/anli"/>


    <ImageView
        android:id="@+id/jianluetu"
        android:layout_width="89dp"
        android:layout_height="111dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/xiangqinginfos_layout"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/jianluetu"
        android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:id="@+id/daihuan_money"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:text="待还 ￥200"
            android:gravity="center"
            android:textColor="@color/black_color_404040"
            android:textSize="18sp"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/chujieren"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="出借人：李斯"
            android:textColor="@color/black_color_404040"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/jiekuan_money"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="借款金额：￥100"
            android:visibility="visible"
            android:gravity="center"
            android:textColor="@color/black_color_404040"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/huankuan_shijian"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="还款时间：2019-12-12"
            android:textColor="@color/black_color_404040"
            android:gravity="center"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dianzipingtiao_icon_status"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dianzipingtiao_jie_icon" />




    <TextView
        android:id="@+id/yuqi"
        android:layout_below="@+id/dianzipingtiao_icon_status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="9dp"
        android:textSize="10sp"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:gravity="center"
        android:background="@drawable/yuqi_bg"
        android:text="@string/home_item_yuqi"
        android:textColor="@color/red_color_ED4641"
        />


</RelativeLayout>