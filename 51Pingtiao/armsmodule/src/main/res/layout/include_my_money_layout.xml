<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:layout_height="128dp">
    <RelativeLayout
        android:id="@+id/wode_huan_layout"
        android:layout_width="185dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/wode_huan"/>
        <TextView
            android:id="@+id/wode_huan_money"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="0.00元"
            android:textStyle="bold"
            android:textColor="@color/black_color_333333"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/wode_shou_layout"
        android:layout_width="185dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/wode_shou"/>
        <TextView
            android:id="@+id/wode_shou_money"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00元"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black_color_333333"/>
    </RelativeLayout>
</RelativeLayout>