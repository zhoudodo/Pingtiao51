<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="207dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <ImageView
                android:id="@+id/cancel"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guanbi"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/jiekuanriqi_str"
                android:textSize="17sp"
                android:textColor="#ff797979"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/sure"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gou"
                android:scaleType="fitXY"/>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="48dp">
            <com.itheima.wheelpicker.WheelPicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_wheel"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_curved="true"
                aigestudio:wheel_cyclic="true"
                aigestudio:wheel_item_align="center"
                aigestudio:wheel_item_text_color="#ACACAC"
                aigestudio:wheel_item_text_size="24sp"
                aigestudio:wheel_selected_item_text_color="@color/black_color_333333"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>