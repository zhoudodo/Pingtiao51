<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="355dp"
    android:layout_height="147dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/item_bg"
    android:background="@drawable/dianzipingtiao_item_bg2">

    <ImageView
        android:id="@+id/jianluetu"
        android:layout_width="89dp"
        android:layout_height="111dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/xiangqinginfos_layout"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/jianluetu"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/daihuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black_color_404040"
            android:text="收到 ￥200"/>

        <TextView
            android:id="@+id/chujieren"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color_404040"
            android:text="递交人：李四"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/jiekuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color_404040"
            android:text="借款金额：￥100"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/huankuan_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_color_404040"
            android:text="经手时间：2018-12-12"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dianzipingtiao_icon_status"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/shoutiao_icon"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/yuqi_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已逾期"
        android:layout_below="@+id/dianzipingtiao_icon_status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/red_color_ED4641"/>

</RelativeLayout>