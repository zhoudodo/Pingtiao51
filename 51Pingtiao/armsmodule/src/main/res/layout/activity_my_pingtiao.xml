<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/drawer_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <include
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/include_my_pingtiao_title"
        >
    </include>
    <LinearLayout
        android:layout_below="@+id/title_layout"
        android:id="@+id/choice_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/pingtiao_type_tv"
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款-电子借条"
            android:textColor="#ff292929"
            android:textSize="19sp"
            />
        <ImageView
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_pingtiao_num1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout"
            android:layout_marginTop="60dp"
            android:layout_below="@id/choice_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </LinearLayout>
        <com.pingtiao51.armsmodule.mvp.ui.custom.view.PingtiaoChoiceView2
            android:id="@+id/pingtiao_choice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choice_layout"
            android:layout_marginTop="1dp"
            >
        </com.pingtiao51.armsmodule.mvp.ui.custom.view.PingtiaoChoiceView2>
    </RelativeLayout>
    <LinearLayout
        android:visibility="visible"
        android:background="@color/white_ffffff"
        android:orientation="vertical"
        android:layout_width="286dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        >
        <TextView
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款期限"
            android:textColor="#ff202020"
            android:textSize="15sp"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:id="@+id/recycler_view_jiekuanqixian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款期限"
            android:textColor="#ff202020"
            android:textSize="15sp"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:id="@+id/recycler_view_huankuanriqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_marginLeft="134dp"
                android:orientation="horizontal"
                android:layout_width="144dp"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/chongzhi"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="重置"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:background="@drawable/tv_bg_normal1"
                    />
                <TextView
                    android:id="@+id/queding"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:background="@drawable/tv_bg_normal2"
                    />
            </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>