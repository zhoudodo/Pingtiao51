<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="355dp"
    android:layout_height="180dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dianzipingtiao_item_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/main_rl_layout"
    >

    <ImageView
        android:id="@+id/jianluetu"
        android:layout_width="89dp"
        android:layout_height="111dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/xiangqinginfos_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/jianluetu"
        android:orientation="vertical">

        <TextView
            android:id="@+id/daihuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="待还 ￥200"
            android:textColor="@color/black_color_404040"
            android:textSize="18sp"
             />

        <TextView
            android:id="@+id/chujieren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="出借人：李斯"
            android:textColor="@color/black_color_404040"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jiekuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="借款金额：￥100"
            android:textColor="@color/black_color_404040"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/huankuan_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="还款时间：2019-12-12"
            android:textColor="@color/black_color_404040"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dianzipingtiao_icon_status"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dianzipingtiao_jie_icon" />

    <TextView
        android:id="@+id/yuqi_flag"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_below="@+id/dianzipingtiao_icon_status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="9dp"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/yuqi_bg"
        android:text="已逾期"
        android:textColor="@color/red_color_ED4641" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView

            android:id="@+id/huankuanshenpi"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:background="@drawable/iocn_huankuanshenpi" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/xiaozhang"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_xiaozhang" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/zaicifasong"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:background="@drawable/zaicifasong_anniu" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/yihuankuan_tv"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:background="@drawable/yihaikuan_anniu" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/shanchujietiao_tv"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_shanchujietiao" />

    </LinearLayout>



</RelativeLayout>